{
    debug
    frankenphp
    order php_server before reverse_proxy
}

:{$PORT} {
    root * public
    encode zstd gzip

    # Proxy WebSocket requests to Reverb
    @reverb {
        path /app*
        header Connection *Upgrade*
        header Upgrade websocket
    }
    
    # Just catch /app* to be safe with all types of Pusher traffic
    handle /app* {
        reverse_proxy 127.0.0.1:8081 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Handle Laravel requests via FrankenPHP
    handle {
        php_server
    }

    # Fallback to index.php for SPA-like routing if needed
    file_server
}
